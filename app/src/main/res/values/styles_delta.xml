<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Generic -->
    <style name="delta_textShadowSmall">
	    <item name="android:shadowColor">@color/DeltaDarkGrey</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">1</item>
 	</style>
 	
    <style name="delta_tabSingleValueText">
   		<item name="android:textColor">#666666</item>
   		<item name="android:textSize">@dimen/text_size_xlarge</item>  
    </style>
    
    <style name="delta_alertText">
   		<item name="android:textColor">#FF9500</item>
   		<item name="android:textSize">@dimen/text_size_medium</item>  
    </style>
       
    <!-- Login Page -->
    <style name="delta_loginInputText">
        <item name="android:background">@color/DeltaBrightRed</item>
	    <item name="android:textColor">@color/DeltaDefaultText</item>
	    <item name="android:textColorHint">@color/DeltaDefaultTextDisabled</item>
	    <item name="android:textSelectHandle">@drawable/text_select_handle_middle</item> 
	    <item name="android:textSize">@dimen/text_size_medium</item>
	    <item name="android:maxLines">1</item>
	    <item name="android:gravity">center</item> 
	</style>
	
    <style name="delta_loginRememberMe">
	    <item name="android:textColor">@color/DeltaDefaultText</item> 
	    <item name="android:textSize">@dimen/text_size_medium</item>
	    <item name="android:checked">true</item>
	    <item name="android:layout_marginTop">@dimen/padding_large</item>
	    <item name="android:layout_gravity">center</item>
    </style>
   
    
    <!-- Settings Page -->
    <style name="delta_settingLabelText">
   		<item name="android:textColor">@color/DeltaDefaultText</item>
   		<item name="android:textSize">@dimen/text_size_medium</item>
   		<item name="android:layout_margin">@dimen/padding_medium</item> 
    </style>
    
    <style name="delta_settingRefText">
   		<item name="android:textColor">@color/DeltaDefaultText</item>
   		<item name="android:textColorHint">@color/DeltaDefaultTextDisabled</item>
   		<item name="android:background">@color/DeltaLightBrightRed</item>
   		<item name="android:textSize">@dimen/text_size_medium</item>
   		<item name="android:layout_marginTop">@dimen/padding_medium</item> 
   		<item name="android:layout_marginBottom">@dimen/padding_medium</item> 
   		<item name="android:layout_marginLeft">@dimen/padding_large</item>
   		<item name="android:layout_marginRight">@dimen/padding_medium</item> 
    </style>
    
    <style name="delta_button">
        <item name="android:textColor">@color/DeltaDefaultText</item>
        <item name="android:background">@color/DeltaDarkRed</item>
   		<item name="android:textSize">@dimen/text_size_medium</item>
   		<item name="android:layout_margin">@dimen/padding_medium</item> 
   		<item name="android:padding">@dimen/padding_medium</item> 
    </style>
    
    <!-- Summary Page -->
    <style name="delta_summary_column_layout">
   		<item name="android:layout_height">fill_parent</item>
   		<item name="android:layout_weight">1</item>
   		<item name="android:layout_width">0dip</item>  
   		<item name="android:orientation">vertical</item> 
   		<item name="android:layout_marginLeft">@dimen/padding_medium</item> 
   		<item name="android:layout_marginRight">@dimen/padding_medium</item> 
    </style>
    
    <style name="delta_summary_item_layout">
   		<item name="android:paddingTop">@dimen/padding_medium</item> 
   		<item name="android:paddingBottom">@dimen/padding_medium</item> 
   		<item name="android:layout_height">0dip</item>
   		<item name="android:layout_weight">1</item>
   		<item name="android:layout_width">fill_parent</item>  
   		<item name="android:orientation">horizontal</item> 
   		<item name="android:background">@drawable/shape_summary_item_background</item>
    </style>
    
    <style name="delta_summary_text">
        <item name="android:textColor">@color/DeltaDefaultText</item>
   		<item name="android:textSize">@dimen/text_size_large</item>
   		<item name="android:padding">@dimen/padding_small</item> 
   		<item name="android:layout_height">wrap_content</item>
   		<item name="android:layout_width">wrap_content</item>
   		<item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="delta_summary_icon_wrapper">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/tab_icon_size</item>
   		<item name="android:layout_width">@dimen/tab_icon_size</item>  
    </style>
    
    <style name="delta_summary_icon">
        <item name="android:layout_height">fill_parent</item>
   		<item name="android:layout_width">wrap_content</item>  
   		<item name="android:padding">@dimen/padding_small</item>  
    </style>
    
    <style name="delta_stat_list_name">
   		<item name="android:textSize">@dimen/text_size_medium</item>
   		<item name="android:padding">@dimen/padding_small</item> 
   		<item name="android:layout_marginLeft">@dimen/padding_small</item>
   		<item name="android:layout_height">fill_parent</item>
   		<item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_gravity">center_vertical</item>
    </style>
      
</resources>